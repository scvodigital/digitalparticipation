{
  "name": "blog_post",
  "debug": true,
  "pattern": {
    "post_path": "/post(/:year)(/:month)(/:day)(/:slug)",
    "post_id": "/p/*id(/:year)(/:month)(/:day)(/:slug)"
  },
  "metaData": {
    "title": "Stories â€“ Scotland's Digital Participation Charter"
  },
  "tasks": [
    {
      "name": "primaryResponse",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../data/elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": {
          "index": "{$../data/elasticsearch-index.txt}",
          "type": "scvo-post",
          "template": ">context.metaData.handlebars.queries.blog-post"
        }
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.head-tags-post",
              "body": ">context.metaData.handlebars.templates.stories_post",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}