<form action="/checkup/confirmation" method="post" class="checkup-section b-padding-full" id="checkup-details">
  {{> checkup_answers section=@root.request.body.answer-section}}
  <input type="hidden" name="answers-site" value="{{@root.data.currentSite.name}}" />
  <input type="hidden" name="answer-section" value="contact-details" />
  <div class="checkup-section-header b-padding-full v-margin-full">
    <div class="container">
      <div class="container-content">
        {{> checkup_progress progress=87}}
        <div class="">
          <div class="columns">
            <div class="column col-2">
              <img src="{{~>asset_url url='images/icon-organisation@2x.png'~}}" title="Details" class="icon" />
            </div>
            <div class="column col-10 col-md-9">
              <h1 class="mdc-typography--headline3">Details</h1>
              <div class="mdc-typography--body1"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="container-content">
      <div class="mdc-typography--body2">
        * required information
      </div>

      <div class="question-block mdc-elevation--z3">
        <div class="question">
          <h2 class="mdc-typography--headline5 question-title">Personal details</h2>
        </div>
        <div class="answer-block-freetext">
          <div class="columns">
            <div class="column col-6">
              <div class="mdc-text-field mdc-text-field--box mdc-ripple-upgraded" data-mdc-auto-init="MDCTextField">
                <input type="text" id="name" name="answers-name" class="mdc-text-field__input mdc-text-field--fullwidth" value="" data-lpignore="true" autocomplete="off"{{#if @root.request.body.answers-sid}} required{{/if}}>
                <label class="mdc-floating-label" for="name">
                  Your name
                </label>
                <div class="mdc-line-ripple"></div>
              </div>
            </div>
            <div class="column col-6">
              <div class="mdc-text-field mdc-text-field--box mdc-ripple-upgraded" data-mdc-auto-init="MDCTextField">
                <input type="text" id="email" name="answers-email" class="mdc-text-field__input mdc-text-field--fullwidth" value="" data-lpignore="true" autocomplete="off">
                <label class="mdc-floating-label" for="email">
                  Email address
                </label>
                <div class="mdc-line-ripple"></div>
              </div>
            </div>
          </div>
          <div class="columns">
            <div class="column col-6">
              {{#if @root.request.body.answers-sid ~}}
              <input type="hidden" name="answers-web_organisation" value="{{@root.data.rootResponse.organisation}}" />
              {{/if ~}}
              <div class="mdc-text-field mdc-text-field--box mdc-ripple-upgraded{{#if @root.request.body.answers-sid}} mdc-text-field--disabled{{/if}}" data-mdc-auto-init="MDCTextField">
                <input type="text" id="web_organisation" name="answers-web_organisation" class="mdc-text-field__input mdc-text-field--fullwidth" data-lpignore="true" autocomplete="off"{{#if @root.request.body.answers-sid}} disabled value="{{@root.data.rootResponse.organisation}}" {{else}} value="" {{/if}}/>
                <label class="mdc-floating-label" for="web_organisation">
                  Your organisation name
                </label>
                <div class="mdc-line-ripple"></div>
              </div>
              {{#if @root.request.body.answers-sid ~}}
              <div class="mdc-text-field-helper-line sharing-info">
                <div class="mdc-text-field-helper-text mdc-typography--caption">You accessed this checkup via a sharing link from {{{@root.data.rootResponse.name}}}. Your scores will be shown on a combined results page.</div>
              </div>
              {{/if ~}}
            </div>
            <div class="column col-6">
              <div class="mdc-typography--body1">
                Your email address will only be used to send you information regarding this survey. If you ask for additional support we will email you in the first instance. We will not share your information with any third parties unless you ask us to do so.<br />
                You can read our <a href="/privacy" target="_blank">privacy notice</a> for more information.
              </div>
            </div>
          </div>
          <!-- <div class="columns">
            <div class="column col-12">
              <div class="mdc-typography--headline6 v-margin">
                Where is your organisation based?
              </div>
            </div>
          </div> -->
          <div class="columns t-margin-full">
            <div class="column col-6">
              {{#if @root.request.body.answers-sid ~}}
              <input type="hidden" name="answers-area" value="{{@root.data.rootResponse.area}}" />
              {{/if ~}}
              <div class="mdc-select mdc-ripple-upgraded{{#if @root.request.body.answers-sid}} mdc-select--disabled{{/if}}" data-mdc-auto-init="MDCSelect">
                <span class="mdc-select__dropdown-icon"></span>
                <select class="mdc-select__native-control" id="area" name="answers-area">
                  {{#each @root.context.metaData.areas ~}}
                  <option value="{{slug}}"{{#compare @root.data.rootResponse.area slug}} selected="selected"{{/compare}}>{{short}}</option>
                  {{/each ~}}
                </select>
                <label class="mdc-floating-label mdc-select__label--float-above mdc-floating-label--float-above" for="area">
                  Where is your organisation based?
                </label>
                <div class="mdc-line-ripple"></div>
              </div>
            </div>
            <div class="column col-6">
              <div class="mdc-text-field mdc-text-field--box mdc-ripple-upgraded{{#if @root.request.body.answers-sid}} mdc-text-field--disabled{{/if}}" data-mdc-auto-init="MDCTextField">
                <input type="text" id="postcode" name="answers-postcode" class="mdc-text-field__input mdc-text-field--fullwidth" data-lpignore="true" autocomplete="off" {{#if @root.request.body.answers-sid}} disabled value="{{@root.data.rootResponse.postcode}}" {{else}} value="" {{/if}}/>
                <label class="mdc-floating-label" for="postcode">
                  Postcode
                </label>
                <div class="mdc-line-ripple"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="cta b-padding-full">
        <button type="submit" class="btn btn-primary">Next section</button>
      </div>
    </div>
  </div>
</div>