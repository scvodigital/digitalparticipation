<div class="columns title">
  <div class="column col-6 col-sm-12">
    <h1>Reports</h1>
    <img src="https://storage.googleapis.com/digitalparticipation/images/illustrations/Resource-Banner.png" alt="Resources illustration" class="responsive-img show-sm" />
  </div>
  <div class="column col-6 hide-sm">
    <img src="https://storage.googleapis.com/digitalparticipation/images/illustrations/Resource-Banner.png" alt="Resources illustration" class="responsive-img pull-right" />
  </div>
</div>

<hr />

<div class="columns resources description">
  {{#each @root.data.supplimentaryResponses.links.hits.hits ~}}
  {{#with _source ~}}
  <div class="column col col-4 col-md-6 col-sm-12">
    <h4>{{{title}}}</h4>
    <p class="t-margin-full">
      <strong>{{{author_attribution}}}</strong>
      {{#if year_published}}
        {{#if author_attribution}}&mdash;{{/if}} {{year_published}}
      {{/if}}
    </p>
    {{{content}}}
    {{#if link ~}}
    <p>
      {{#if (contains link ".pdf") ~}}
      <a href="{{link}}" rel="noopener" download>Download</a> <span class="fas fa-file-pdf" aria-hidden="true"></span>
      {{else}}
      {{#if (contains link ".zip") ~}}
      <a href="{{link}}" rel="noopener" download>Download</a> <span class="fas fa-file-archive" aria-hidden="true"></span>
      {{else}}
      <a href="{{link}}" rel="noopener">Read more</a> <span class="fas fa-external-link" aria-hidden="true"></span>
      {{/if ~}}
      {{/if ~}}
    </p>
    {{/if ~}}
  </div>
  {{/with ~}}
  {{/each ~}}
</div>

<hr class="margin-top" />
